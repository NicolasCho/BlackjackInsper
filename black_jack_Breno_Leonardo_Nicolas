import random


def saque(baralho):
    random.shuffle(baralho)
    carta = baralho.pop()
    return carta


def soma(mao):
    a = False
    listasemas = []
    i = 0
    while i < len(mao):
        if mao[i] != 1:
            listasemas.append(mao[i])
            i += 1
        elif mao[i] == 1 and '1' not in listasemas:
            a = True
            for e in mao[i + 1:]:
                if mao[i] == e:
                    listasemas.append(e)
            i += 1
    somatoriosemas = 0
    for g in listasemas:
        somatoriosemas = somatoriosemas + g
    if somatoriosemas <= 10 and a == True:
        soma = somatoriosemas + 11
    elif somatoriosemas > 10 and a == True:
        soma = somatoriosemas + 1
    else:
        soma = somatoriosemas
    return soma
